#download-catalog.mfp-hide.popup-block.zoom-anim-dialog
  .background
  .container.relative
    .close-popup.popup-modal-dismiss: i.icon-close
    h2
      +reveal(['Download catalog'])
    .row(data-aos='')
      .col.col__md-6.col__xs-12
        .form__group: +fieldLabelInput('text', 'name', 'name-landing', 'Name', false)
        .form__group: +fieldLabelInput('email', 'email', 'email-landing', 'E-mail*', true, '#')
        .form__group: +fieldLabelInput('text', 'phone', 'phone-landing', 'Telephone*', true, '#')
      .col.col__md-6.col__xs-12
        .form__group: +fieldLabelInput('text', 'company', 'company-landing', 'Company name', false)
        .form__group: +fieldLabelTextarea('text', 'text-landing', 'Additional information', false, 'small')
    .row(data-aos='')
      .col.col__md-6.col__xs-12
        .checkbox.form__group
          input(type="checkbox", id='faq-landing')
          label.label(for='faq-landing')
            span You consent to the processing of your personal data in accordance with #[a(href='#') the site's regulatory documents]
      .col.col__md-6.col__xs-12
        .form__group
          a.btn.btn--full.btn--primary.send--js.btn-arrow(href='#')
            i.icons-left.icon-arrow-med-right
            span Send
            i.icons-right.icon-arrow-mini-right

