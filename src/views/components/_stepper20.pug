      label.form__group Мойка под давлением
      .form__group
        +fieldRadio('Да', 'radio1', 'radioabcd', false, 'radio--inline')
        +fieldRadio('Нет', 'radio2', 'radioabcd', false, 'radio--inline')
      br
      .stepper-next: +btnArrowSub('Шаг 2', 'btn--full')
    h3 2
    include ../components/_stepperLast1
