  a.btn.btn--default.popup-modal.popup-with-zoom-anim(href='#call')
    span Скачать опросный лист
      br
      small .PDF&nbsp;&nbsp;235 KB.
    i.icon-download
form.steps-form-valid.stepper-two(action='#')
  div
    h3 1
    section
      .row.middle__xs
        .col.col__md-6.col__xs-12.form__group: +fieldLabelInputId('id-1', 'Продукт*', true)
        .col.col__md-6.col__xs-12.form__group: +fieldLabelInputId('id-2', 'Габариты, (ДхШхВ), мм*', true, 'isNumber')
        .col.col__md-6.col__xs-12.form__group: +fieldLabelInputId('id-3', 'Вес единицы продукта, г*', true, 'isNumber')
        .col.col__md-6.col__xs-12.form__group: +fieldLabelInputId('id-4', 'Диапазон взвешивания, г*', true, 'isNumber')
        .col.col__xs-12.form__group: +fieldLabelInputId('id-5', 'Погрешность взвешивания, г*', true, 'isNumber')
        .col.col__xs-12.form__group: +fieldLabelInputId('id-6', 'Производительность взвешиваний в минуту*', true, 'isNumber')
        .col.col__xs-12.form__group: +fieldLabelInputId('id-7', 'Высота подводящего конвейера от пола до ленты, мм', false, 'isNumber')
        .col.col__xs-12.form__group: +fieldLabelInputId('id-8', 'Ширина ленты подводящего конвейера, мм', false, 'isNumber')
        .col.col__xs-12.form__group: +fieldLabelInputId('id-9', 'Скорость движения ленты подводящего конвейера, м/c', false, 'isNumber')
