.stepper-btn
  a.btn.btn--default.popup-modal.popup-with-zoom-anim(href='#call')
    span Скачать опросный лист
      br
      small .PDF&nbsp;&nbsp;235 KB.
    i.icon-download
form.steps-form.stepper-three(action='#')
  div
    h3 1
    section
      h4 Характеристики шаровой мельницы
      h5 Тип шаровой мельницы
      .form__group
        +fieldLabelInput('text', 'zxc', 'zxc', 'Наружный диаметр бутары со стороны присоединительного фланца', false)
      .form__group
        +fieldLabelInput('text', 'zxcf', 'zxcf', 'Внутренний диаметр бутары со стороны присоединительного фланца', false)
      .form__group
        +fieldLabelInput('text', 'zxcg', 'zxcg', 'Наружный диаметр присоединительного фланца бутары', false)
      .row
        .col.col__md-6.col__xs-12.form__group
          +fieldLabelInput('text', 'zxc2', 'zxc2', 'Диаметр монтажных отверстий бутары', false)
        .col.col__md-6.col__xs-12.form__group
          +fieldLabelInput('text', 'zxc2', 'zxc2', 'Количество монтажных отверстий бутары', false)
      .form__group
        +fieldLabelInput('text', 'zxc3', 'zxc3', 'Диаметр расположения монтажных отверстий', false)
      .form__group
        +fieldLabelInput('text', 'zxc3', 'zxc3', 'Направление вращения мельницы', false)
      .form__group
        +fieldLabelInput('text', 'zxc3', 'zxc3', 'Производительность шаровой мельницы', false)
      br
      .stepper-next: +btnArrowSub('Шаг 2', 'btn--full')
    h3 2
    section
      h4 Характеристика материала сепарации, а также мелющих шаров
      .form__group: +fieldLabelInput('text', 'asd', 'asd', 'Тип руды, измельчаемой в мельницах', false)
      h5 Характеристика материала после измельчения (на выходе из мельницы)
      .row
        .col.col__md-6.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh', 'fgh', 'Фракционный состав (крупность материала)', false)
        .col.col__md-6.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh1', 'fgh1', 'Объемный вес', false)
        .col.col__md-6.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh2', 'fgh2', 'Соотношение жидкого к твёрдому (%)', false)
        .col.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh3', 'fgh3', 'Химический состав материала', false)
        .col.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh4', 'fgh4', 'Фракционный состав (крупность) кусков (обломков) мелющих шаров', false)
        .col.col__xs-12.form__group
          +fieldLabelInput('text', 'fgh5', 'fgh5', 'Максимальная масса обломков мелющих шаров', false)
      .row.middle__xs
        .col.col__md-6.col__xs-12.form__group
          label Количество необходимых систем
        .col.col__md-6.col__xs-12.form__group
          +fieldInput('text', 'fgh7', 'fgh7', '', false)
      br
      .stepper-next: +btnArrowSub('Шаг 3', 'btn--full')
    h3 3
    include ../components/_stepperLast
