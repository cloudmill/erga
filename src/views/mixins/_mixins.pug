//- mixins

mixin breadcrumbs(items)
  ul.breadcrumbs
    li.breadcrumbs__item.revealOut
      a.breadcrumbs__link.revealIn(href="/", data-aos='')
        i.icon-arrow-mini-left
        span Главная
    each item in items
      li.breadcrumbs__item.active.revealOut
        span.revealIn(data-aos='')= item

mixin roundLink(title)
  .roundLink-body(data-aos="fade-up", data-aos-delay='500')
    a.roundLink(href='#')
      .arrowLine
        span= title
        i.icon-arrow-mini-right

mixin btnArrow(title)
  a.btn.btn--default.btn-arrow(href='#')
    i.icons-left.icon-arrow-med-right
    span= title
    i.icons-right.icon-arrow-mini-right

mixin btnArrowSub(title, addClass)
  button.btn.btn--primary.btn-arrow(type='submit', class=addClass)
    i.icons-left.icon-arrow-med-right
    span= title
    i.icons-right.icon-arrow-mini-right


mixin img(path, className)
  img(src='assets/images/' + path, alt='', class=className)

mixin slickPrev()
  .slick-prev.slick-arrow
    i.icon-arrow-left

mixin slickNext()
  .slick-next.slick-arrow
    i.icon-arrow-right

mixin arrowLine(title, className)
  a.arrowLine(class=className, href='#')
    .the-arrow.the-arrow-left: i.shaft.icon-arrow-med-right
    span.arrowLine-main= title
    .the-arrow.the-arrow-right: i.shaft.icon-arrow-mini-right

mixin marquees(title)
  .marquee
    .marquee--inner
      div= title
      div= title

//- menu
mixin menu(items)
  ul.main-nav
    each item in items
      - var parent  = ''
      - if(item.subitems !== false) parent='main-nav__item--parent'
      li.main-nav__item(class=parent)
        a.main-nav__link(href=item.href, title=item.title)= item.title
        - if(item.subitems !== false)
          ul.sub-nav
            each subitem in item.subitems
              li.main-nav__item
                a.main-nav__link(href=subitem.href, title=subitem.title)= subitem.title

//- reveal
mixin reveal(items)
  each item in items
    .revealOut
      span.revealIn(data-aos='')= item
mixin revealIndep(items)
  each item in items
    .revealOut
      span.revealIn= item


//- form-input
mixin fieldInput(type, name, id, label, required)
  label(for=id)= label
  input.control(type=type, name=name, id=id, required=required)

mixin fieldLabelInput(type, name, id, label, required)
  - let className = ''
  - if(required !== false) className='required'
  .relative
    .input
      input.input__field(type=type, id=id, name=name, required=required, class=className)
      label.input__label(for=id)
        span.input__label-content.input__label-content= label
    .input-error
      |#{'Please, fill in the field correctly'}

mixin fieldLabelInputId(id, label, required, mainClass)
  - let className = ''
  - if(required !== false) className='required'
  .relative
    .input(class=mainClass)
      input.input__field(type=type, id=id, required=required, class=className)
      label.input__label(for=id)
        span.input__label-content.input__label-content= label
    .input-error
      |#{'Please, fill in the field correctly'}

mixin fieldLabelTextarea(name, id, label, required, modifier)
  - const className = 'textarea';
  .input(class = [className, modifier ? className + '--' + modifier : null])
    textarea.input__field(name=name, id=id, required=required)
    label.input__label(for=id)
      span.input__label-content.input__label-content= label

//- form-textarea
mixin fieldTextarea(name, id, label, placeholder, rows, data, required)
  label(for=id)= label
  textarea.control(name=name, id=id, placeholder=placeholder, rows=rows,  required=required)

//- form-checkbox
mixin fieldCheckbox(name, id, checked, classMain, img)
  .checkbox(class=classMain)
    if img
      img(src='assets/images/' + img, alt='title')
    input(type="checkbox", id=id, checked=checked)
    label(for=id)=name

//- form-radio
mixin fieldRadio(label, id, name, checked, classMain)
  .radio(class=classMain)
    input(type="radio", id=id, value=id, name=name, checked=checked)
    label(for=id)=label


