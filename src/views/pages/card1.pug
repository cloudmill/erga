extends ../layouts/master.pug

block pageName
  - var pageName = "fxindex"

block header
  include ../partials/_headerFX.pug

block content
  .card
    include ../components/_cardTop
    .card-desc
      .container
        .card-scheme.row.stretch__xs
          .col.col__xs-12(data-aos="fade-up")
            .card-scheme__item.card-scheme__item--full
              h3
                +reveal(['Отрасли применения'])
              ul.list--unstyled
                li
                  .image: +img('icons/ico-slide-7.svg')
                  a(href='#') Горная отрасль
                li
                  .image: +img('icons/ico-slide-9.svg')
                  a(href='#') Пищевая отрасль
                li
                  .image: +img('icons/ico-slide-11.svg')
                  a(href='#') Стекольная отрасль
                li
                  .image: +img('icons/ico-slide-8.svg')
                  a(href='#') Рециклинг
                li
                  .image: +img('icons/ico-slide-10.svg')
                  a(href='#') Машиностроение
        form.contacts-form(data-aos="fade-up", action='')
          h3 получить консультацию
          include ../components/_form
        .row.tabs.relative.card-tabs
          .col.col__lg-3.col__md-4.col__xs-12.card-tabs__left
            .sidebar__inner
              ul.aside-menu.tabs-list(data-aos="fade-up")
                li: a.tab.active(data-target='#desc'): span Описание
                li: a.tab(data-target='#tech'): span Технические характеристики
                li: a.tab(data-target='#zip'): span ЗИП
                li: a.tab(data-target='#list'): span Опросный лист
                li: a.popup-modal.popup-with-zoom-anim(href='#getACall'): span Заказать звонок
          .col.col__lg-9.col__md-8.col__xs-12
            include ../components/_cardTabs
            #list.tabs-content(data-aos="fade-up")
              include ../components/_stepper1
        include ../components/_cardBottom

block footer
  include ../partials/_footer.pug
